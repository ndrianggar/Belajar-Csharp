<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
   @RenderPage("_Header.cshtml")
    @{
        var menus = new string[] { "Doa", "Hadits", "Artikel" ,"Fiqih", "Sirah","Ulum Quran", "Doa", "Hadits", "Artikel", "Fiqih", "Sirah", "Ulum Quran", "Doa", "Hadits", "Artikel", "Fiqih", "Sirah", "Ulum Quran", "Doa", "Hadits", "Artikel", "Fiqih", "Sirah", "Ulum Quran" };
    }

    <div class="container-xxl my-md-4 bd-layout">
        <div class="row">
            <div class="col-sm-2">
            <aside class="bd-sidebar">
                <nav class="navbar-collapse bd-links ">
                    <ul class="list-unstyled mb-0 py-3 pt-md-1">
                    @foreach (var menu in menus)
                    {
                      <li class="pt-md-1">@menu</li>

                       
                    }
                    </ul>
                </nav>
            </aside>
                </div>
           
             <div class="col-sm-8">@RenderBody()</div> 
            <div class="col-sm-2"></div>
        </div>
    </div>
        <hr />
       @RenderPage("_Footer.cshtml")
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
